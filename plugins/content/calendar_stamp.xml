   <option value="1">VALUE_MONTH_LENGHT_FULL</option>
  </param>
  <param name="year_format" type="list" default="YEAR_FORMAT_4" label="PARAM_YEAR_FORMAT" description="PARAM_YEAR_FORMAT_DESC">
   <option value="YEAR_FORMAT_4">4 Digits (2009)</option>
   <option value="YEAR_FORMAT_2">2 Digits (09)</option>
  </param>
  <param name="@spacer" type="spacer" default="" label="" description="" />
